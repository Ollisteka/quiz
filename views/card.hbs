<form>
    <div class="d-flex flex-row flex-wrap">
        {{#each questions}}
            <div class="question-block border m-2 p-2">
                <img class="question-img" src="{{this.url}}" alt="{{this.alt}}">
                <div class="question question-{{@index}} font-weight-bold">{{this.question}}</div>
                <div class="answers">
                    {{#each this.answers}}
                        <div class="form-check">
                            <input type="radio" name="question-{{@../index}}" class="form-check-input"
                                   id="question-{{@../index}}-{{@index}}" value="{{@index}}" required>
                            <label class="form-check-label" for="question-{{@../index}}-{{@index}}">{{this}}</label>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/each}}
    </div>
<div class="text-center">
    <label><input type="text" placeholder="Введите ваше имя" name="username"></label>
    <button class="btn btn-primary">Проверить</button>
</div>

</form>